{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Debug Dev Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "./node_modules/next/dist/bin/next",
        "dev"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    }
  ]
}